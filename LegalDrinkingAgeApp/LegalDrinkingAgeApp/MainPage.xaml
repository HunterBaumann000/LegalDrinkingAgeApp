<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LegalDrinkingAgeApp.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Label Text="Enter your Age" HorizontalTextAlignment="Center" TextColor="White" FontSize="22"/>
        
        <Entry x:Name="Age"
               HorizontalOptions="Center"  
               Text=""
               />

        <Button Text="Can I Drink?"
                HorizontalOptions="Center"
                Clicked="Handle_Clicked" />

        <Label x:Name="TheLabel" Text="" FontSize="Title" Padding="30,10,30,10"/>

        <Label x:Name="YearsUntilLabel" Text="" FontSize="Title" Padding="30,10,30,10"/>

    </StackLayout>

</ContentPage>
